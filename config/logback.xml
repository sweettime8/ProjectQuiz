<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml"/>

    <appender name="ROLLIN" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>daily-logs/projectExam-service.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>daily-logs/ProjectQuiz-service-%d{yyyy-MM-dd}.log</fileNamePattern>
            
            <!-- retain 30 days logs -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    
        <encoder>
            <pattern>
                %d{dd-MM-yyyy HH:mm:ss.SSS} %-5level %logger{36}.%M - %msg%n
            </pattern>
        </encoder>
    
    </appender>

    <root level="INFO">
        <appender-ref ref="ROLLIN" />
    </root>

    <logger name="root" level="ERROR"/>
    <logger name="org.springframework" level="ERROR" />
    <logger name="com.mrd.ProjectQuiz" level="INFO" />
</configuration>